<h1>Sign up as a new user</h1>
<% @user.password = @user.password_confirmation = nil %>

<%#= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= f.label :Username %>*<br/>
<%= f.text_field :login %><div  class="t"><%=@a %></div></p>

<p><%= f.label :email %>*<br/>
<%= f.text_field :email %><div  class="t"><%=@d %></div></p>

<p><%= f.label :Firstname %><br/>
<%= f.text_field :firstname %><h4><%=@e %></h4></p>


<p><%= f.label :Lastname %><br/>
<%= f.text_field :lastname %><h4><%=@f %></h4></p>

<p><%#=f.label ("You are in the PST time zone")%></p>
<% if !@timezone.nil? %>
<b>Plz... select the time zone</b>
<select id="tz" name="tz">

<% @timezone.each do |t| %>
<option> <%= t.description if !t.description.nil? %> </option>
<% end %>
</select>
<% end %>
<p><%= f.label :password %>*<br/>
<%= f.password_field :password %><div  class="t"><%=@b %></div></p>

<p><%= f.label :password_confirmation, 'Confirm Password' %>*<br/>
<%= f.password_field :password_confirmation %><div  class="t"><%=@c %></div></p>

<p><%= submit_tag 'Sign up' %></p>
<% end -%>

